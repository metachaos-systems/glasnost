<div class="ui stackable three cards">
  <%= for post <- @posts do %>
  <% img_src = hd(post.json_metadata["image"]) %>
    <div class="ui card" >
      <div class="image">
        <a class="header" href="/post/<%= post.permlink %>"> <img src="<%= img_src %>"> </a>
      </div>
      <div class="content">
        <a class="header" href="/post/<%= post.permlink %>"> <%= post.title %> </a>
        <div class="meta"> </div>
        <div class="description"> </div>
      </div>
      <div class="extra content">
        <div class="ui large labels">
            <%= for tag <- post.tags do %>
              <a class="ui  label" href="/tag/<%=tag%>">
                <%= format_tag(tag, @conn.assigns.lang) %>
              </a>
            <% end %Ð‘
          </div>
        </div>
    </div>
  <% end %>
</div>
